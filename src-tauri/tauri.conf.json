{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Industry Vis",
  "version": "1.0.1",
  "identifier": "com.industryvis.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "工业数据可视化系统",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "silent": true
      },
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false,
        "languages": [
          "SimpChinese",
          "English"
        ]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
